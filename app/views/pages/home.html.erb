<div class="banner">
  <div class="banner-content">
    <h1>Oscapes</h1>
    <h2>Plan and book your next outdoor escape</h2>
    <div class="btn btn-success btn-large"><%= link_to "See routes", routes_path %></div>
  </div>
</div>
<div class="green-wrapper">
  <div class="container">
    <h3>Cut the trek out of planning your next walk in the great outdoors</h3>
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-md-4">

      </div>
    </div>
  </div>
</div>
<div class="green-wrapper">
  <div class="container">
    <h3 class="text-center">Some of our latest routes</h3>
    <div class="row">
      <% @routes.each do |route| %>
        <%= link_to route_path(route) do %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card" style="background-image: url('<%= route.hero_image %>')">
              <div class="card-hover">
                <div class="card-content">
                  <h2><%= route.name %></h2>
                  <p>50km | 3 Days</p>
                  <p>Easy | 1km Ascent</p>
                  <p>
                  <% 4.times do %>
                    <i class="glyphicon glyphicon-star"></i>
                  <% end %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
